   local behindamount = -3.5 --change, if you want it more back or less
    
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = game.workspace.___Game.__Render.Jungle_Island.__Npcs.___Mobs.Gorilla.HumanoidRootPart.CFrame + game.workspace.___Game.__Render.Jungle_Island.__Npcs.___Mobs.Gorilla.HumanoidRootPart.CFrame.lookVector * behindamount
