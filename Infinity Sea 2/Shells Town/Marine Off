_G.loop = false

while _G.loop do
   local behindamount = -3.5 --change, if you want it more back or less
    
    game.Players.LocalPlayer.Character.HumanoidRootPart.CFrame = game:GetService("Workspace")["___Game"]["__Render"]["Shells_Town_Island"]["__Npcs"]["___Mobs"].Marine.HumanoidRootPart.CFrame + game:GetService("Workspace")["___Game"]["__Render"]["Shells_Town_Island"]["__Npcs"]["___Mobs"].Marine.HumanoidRootPart.CFrame.lookVector * behindamount
   wait() -- delay to prevent crashing
end
